<tr>
  <td><%= link_to "#{lg.name}", league_path(lg) %></td>
  <td><%= lg.schools.count %></td>
  <td><%= lg.league_rep %> 
        <% if lg.league_rep.school %>
          (<%= User.where('name LIKE ?', "%#{lg.league_rep}%")[0].school.name %>)
        <% end %></td>


    <td><%= link_to "Wrestlers (#{@wrestler_count_hash[lg.id.to_s]})", league_wrestlers_path(lg) %></td>
    <% if user_signed_in? && current_user.admin? %>
    <td><%= lg.cell %></td>
    <td><%= lg.email %></td>
    <td><%= link_to 'Edit', edit_league_path(lg) %></td>


    <% end %>

  </td>
</tr>