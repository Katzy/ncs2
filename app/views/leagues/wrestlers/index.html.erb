       <% else %>
         <b><%= @lg.name %></b><br>(<%= Season.find(@season.id).name %> season)<br>(<%= @lg.wrestlers.where(season_id: @season.id).count %>)<br><br>
       <% end %>
       Download:
            <%= link_to "CSV", league_wrestlers_path(format: "csv") %> <br><br>
    
      <% if user_signed_in? && (current_user.admin? ||  (current_user.league_id == @lg.id && current_user.league_rep == true )) %>
        <div class="ui animated large button">
          <a href="/leagues/<%= @lg.id %>/wrestlers/edit_all">
