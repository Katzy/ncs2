<div class="ui center aligned grid">

  <div class="ui mobile only row">
     <div class="sixteen wide column">
       <b><%= @wrestler.first_name %> <%=@wrestler.last_name%></b>
    </div>
    <div class="ui center aligned segment">
      <table class="ui celled right aligned structured stackable table">
        <thead>
          <tr>
            <th rowspan="2">Date</th>
            <th rowspan="2">Weight</th>
            <th rowspan="2">Event</th>
            <th rowspan="2">Tournament</th>
            <th rowspan="2">Seed</th>
            <th rowspan="2">Opponent</th>

            <th rowspan="2">W/L</th>

            <th rowspan="2">Result</th>
            <th rowspan="2">Score/Time</th>

            <th colspan="1">Place</th>
        
            <% if user_signed_in? && (current_user.admin? || current_user.school) %>
            <th rowspan="2">EDIT</th>
            <% end %>
            <% if user_signed_in? && (current_user.admin? || current_user.school) %>
            <th rowspan="2">DELETE</th>
            <% end %>
          </tr>

        </thead>
        <tbody>
          <% @matches.each do |m| %>
             <%= render partial: 'matches/table_row', locals: { wrestler: wrestler, bout: bout } %>
            <% end %>

        </tbody>
      </table>
    </div>
  </div>
  <div class="ui computer only tablet only row">
    <div class="sixteen wide column">
      <b><%= @lg.name %></b>
    </div>
    <div class="ui center aligned segment">
    <% if user_signed_in? && (current_user.admin? ) %>
        <i class="add user icon"></i><%= link_to 'ADD WRESTLER', new_league_wrestler_path %>
        <% end %>
      <table class="ui celled right aligned structured stackable table">
        <thead>
          <tr>
            <th rowspan="2">SEED</th>
            <th rowspan="2">WT</th>
            <th rowspan="2">LEAGUE PL</th>
            <th rowspan="2">SCHOOL</th>
            <th rowspan="2">FIRST</th>
            <th rowspan="2">LAST</th>
            <th rowspan="2">YR</th>
            <th rowspan="2">W</th>
            <th rowspan="2">L</th>
            <th rowspan="2">SEC Pl</th>
            <th rowspan="2">ST Pl</th>

            <th colspan="1">TOURNAMENT PLACES</th>
            <th colspan="1">HEAD 2 HEAD</th>



            <% if user_signed_in? && (current_user.admin? || current_user.school) %>
            <th rowspan="2">EDIT</th>
            <% end %>
            <% if user_signed_in? && (current_user.admin? || current_user.school) %>
            <th rowspan="2">DELETE</th>
            <% end %>
          </tr>

        </thead>
        <tbody>
          <% @wrestlers.each do |wrestler| %>
             <%= render partial: 'leagues/wrestlers/table_row', locals: { wrestler: wrestler } %>
            <% end %>

        </tbody>
      </table>
    </div>
  </div>
</div>
