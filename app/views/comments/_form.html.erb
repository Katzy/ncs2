<div class="form">
  <%= form_for @comment, remote: true do |f| %>
    <div class="form-group">

      <%= f.label :body, 'Enter your comment:' %><br>
      <%= f.text_area :body, rows: 3, class: 'form-control', required: true, maxlength: 500 %>
      </div>
    </div>

    <%= f.submit 'Post', class: 'button' %>
  <% end %>
</div>
