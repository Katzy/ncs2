

  <% if current_user %>
    <h1>NCS Chatroom</h1>
    <div class="ui grid">
      <div class="four wide column">
      </div>
      <div class="eight wide column">
        <div class="ui segment">
          <ul id="chat">
              <%= render @comments %>
            </ul>
            </div>
          <div class="ui center aligned segment">
          <div class="header">
            <h1>Join the discussion!</h1>
          </div>

        <%= render '/comments/form' %>
        </div>
      </div>
      <div class="four wide column">
      </div>
    </div>
    <% else %>
      <h1>Sign in or Create an account to chat with other NCS Wrestling fans.</h1>
    <% end %>

